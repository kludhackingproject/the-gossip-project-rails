<p><%= link_to "Par ici si tu veux créer un nouveau potin", new_gossip_path, class: 'navbar-brand' %></p>

<h3>Hello visiteur ! Voici tous les potins de THP :</h3>

<div class="row">
  <% @gossips.each do |item| %>
    <div class="col-sm-6" style="padding: 30px">
      <div class="card">
        <div class="card-header">
          <h4><%= item.title %></h4>
        </div>
        <div class="card-body">
          <h5 class="card-title">A été écrit par <%= item.user.first_name %></h5>
          <%= link_to "En savoir plus...", gossip_path(item.id), class:"btn btn-primary" %>
          <%= link_to "Editer", edit_gossip_path(item.id), class:"btn btn-default" %>
          <%= link_to "Supprimer", gossip_path(item.id), class:"btn btn-danger", data: {:confirm => "Etes vous sûr de supprimer ?", :method => "DELETE"} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
